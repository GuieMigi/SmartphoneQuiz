<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">Smartphone Quiz</string>

    <!--The toast that is displayed if the player scores 10 points-->
    <string name="perfect_score_toast">Congratulations <xliff:g example="George" id="playerName">%s</xliff:g>! You have answered correctly to <xliff:g example="2" id="score">%d</xliff:g> out of 10 questions. You are a smartphone genius.</string>
    <!--The toast that is displayed if the player scores at least 6 points-->
    <string name="average_score_toast">Congratulations <xliff:g example="George" id="playerName">%s</xliff:g>! You have answered correctly to <xliff:g example="2" id="score">%d</xliff:g> out of 10 questions. You know your way around smartphones, but there\'s still a lot to learn.</string>
    <!--The toast that is displayed if the player scores less than 6 points-->
    <string name="lame_score_toast">Congratulations <xliff:g example="George" id="playerName">%s</xliff:g>, on completing the Smartphone Quiz! You have answered correctly to <xliff:g example="2" id="score">%d</xliff:g> out of 10 questions. You should improve your knowledge on smartphones.</string>
    <!--The toast that is displayed if the player scores 0 points-->
    <string name="no_score_toast">You\'re not even trying <xliff:g example="George" id="playerName">%s</xliff:g>. You have answered correctly to <xliff:g example="2" id="score">%d</xliff:g> out of 10 questions. Put your back in it!</string>
    <!--The message displayed to the user when the app starts-->
    <string name="welcome_message">Welcome to the smartphone quiz. This quiz will test your knowledge of the smartphone world. Please enter your name below.</string>
